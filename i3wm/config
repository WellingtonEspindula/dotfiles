# Executing compton for opacity
exec --no-startup-id compton
# Executing synapse
exec --no-startup-id synapse -s
# Executing qlipper
exec --no-startup-id qlipper
# Executing redshift
exec --no-startup-id redshift
# Executing by default the work display environment 
exec --no-startup-id autorandr -l work


# lock screen
bindsym $MOD+SHIFT+x exec i3lock -c 000000

# brightness buttons
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

bindsym $MOD+SHIFT+bracketleft exec bmin
bindsym $MOD+SHIFT+bracketright exec bmax

# Spotify related key bindings
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl play-pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# PrintScreen (Open Flameshot)
bindsym Print exec flameshot gui



# DROPDOWN Terminal
# Executing dropdown terminator
exec --no-startup-id terminator --name dropdown_terminal

bindsym $mod+u [instance="dropdown_terminal"] scratchpad show, move position 300 0

for_window [instance="dropdown_terminal"] floating enable
for_window [instance="dropdown_terminal"] move scratchpad
for_window [instance="dropdown_terminal"] resize set 800 200


# DROPDOWN PYTHON3 Terminal
# Executing dropdown terminator
exec --no-startup-id terminator -e python3 --name dropdown_python

bindsym $mod+p [instance="dropdown_python"] scratchpad show, move position 300 0

for_window [instance="dropdown_python"] floating enable
for_window [instance="dropdown_python"] move scratchpad
for_window [instance="dropdown_python"] resize set 800 200

